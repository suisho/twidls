@import "nib"
@import "_pallets"

// function
mp(n)
  padding n
  margin n

.template
  display none

body
  background $bodyBg
  font-family 13px Helvetica, arial, freesans, clean, sans-serif
  mp(0)

.menu
  padding 4px
  width 100%
  height 1.5em
  font-weight bold
  background $navColor


.list-items
  background $listColor
  margin     10px
  padding    10px
  img.icon
     border-radius: 3px;
  

.dropzone.dragenter
  background $itemColor

.item
  background $itemColor

.user
  background $itemColor
